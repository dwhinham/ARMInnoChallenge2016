<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gcea.androidmicrobittest.MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="false"
        android:layout_centerVertical="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/microbit_logo"
            android:id="@+id/imgMicroBit"
            android:tint="@color/logoColor"
            android:adjustViewBounds="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="25dp"
            android:layout_centerHorizontal="false" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/arm_logo"
            android:id="@+id/imgARM"
            android:tint="@color/logoColor"
            android:layout_below="@id/imgMicroBit"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtTitleStatus"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:text="@string/title_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp" />

            <TextView
                android:id="@+id/txtStatus"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:text="@string/status_disconnected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:textColor="@color/colorRed"
                android:textAlignment="textEnd" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtTitleConsole"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:text="@string/title_console"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textAlignment="viewStart" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txtConsole"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:fontFamily="monospace"
                    android:textSize="14sp"
                    android:textIsSelectable="true"
                    android:singleLine="false" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</RelativeLayout>
